<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("../partials/head"); %>
</head>

<body>
  <header>
    <%- include("../partials/header"); %>
  </header>

  <main>
    <div class="jumbotron py-1">
      <h1>All Mammoth Interactive Courses</h1>
      <p>Learn web development and much more.</p>

      <h2>Courses</h2>
      <ul>
        <% courses.forEach(function(course) { %>
          <li>
            <%= course.title %>  
            <br>
            <%= typeof course.description != 'undefined' ? course.description : '' %>
 
          </li>
        <% }); %>
         
      </ul>
    </div>
  </main>

  <footer>
    <%- include("../partials/footer"); %>
  </footer>
</body>

</html>